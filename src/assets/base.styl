body,html
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  background #fff
  font-size 14px
  color #282828

.clearfix::after,
.clearfix:before
  display table
  clear both
  content ''

.fl
  float left
.fr
  float right

.flex-row
  display flex
  text-align center
  flex-flow row nowrap
  justify-content space-between
  align-items center

.flex-col
  display flex
  text-align center
  flex-flow column nowrap
  justify-content space-between
  align-items center

.align-center
  text-align center
.align-left
  text-align left
.align-right
  text-align right

.img-present
  width 100%
  height 100%
  max-width 100%
  max-height 100%

.distance-fifty
  min-height 100vh
  padding 50px 12px 0
  box-sizing border-box
  background-color #f3f3f3

.shadow
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 999
  background-color rgba(0,0,0,0.7)
